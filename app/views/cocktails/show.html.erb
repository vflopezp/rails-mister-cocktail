<% if @cocktail.photos.attached? %>
  <div class="banner" id="banner-show" style="height: 350px; background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photos.first.key %>');">
  </div>
<% else %>
  <div class="banner" id="banner-show" style="height: 350px; background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1595977437232-9a0426ebfe4c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80'); background-size: cover; background-position: center;">
  </div>
<% end %>
<div class="container">
  <div class="row" id="grid-show">
    <div class="col-lg-8">
      <div class="container bg-light p-4 rounded-lg my-3">
        <h1><%= @cocktail.name %></h1>
      </div>
      <div class="container bg-light p-4 rounded-lg">
        <h3>Ingredients:</h3>
        <p>
          Ingredients:
          <ul class="list-group">
            <% @cocktail.doses.each do |dose| %>
              <li class="list-group-item">
                <%= dose.ingredient.name %>
                <%= dose.description %>
                <%= link_to "Remove",
                            dose_path(dose),
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
              </li>
           <% end %>
          </ul>
        </p>
        <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
        <%= link_to "Back", cocktails_path, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="container bg-light p-4 rounded-lg my-3">
        <h3>Details</h3>
        <h6>
          Icons for allergies?
        </h6>
      </div>
      <div class="container-fluid justify-content-between bg-light p-4 rounded-lg">
        <p>Share</p>
        <h3>
          <i class="fab fa-facebook-square"></i>
          <i class="fab fa-twitter-square"></i>
          <i class="fab fa-pinterest-square"></i>
          <i class="fas fa-envelope-square"></i>
        </h3>
      </div>
    </div>
  </div>
</div>


